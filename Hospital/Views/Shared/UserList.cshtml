@model IEnumerable<Hospital.Models.UserViewModel>
           @using Hospital.Models.Enums

@{
    
    ViewBag.Title = Request.Url.AbsolutePath.Substring(1);
}

<h2>@ViewBag.Title</h2>

<table class="table table-striped table-hover table-curved">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            @if (Model.All(u => u.Role == Role.Patient))
            {
                <th>
                    @Html.DisplayNameFor(model => model.PatientInfo.BirthdayDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PatientInfo.Address)
                </th>
            }
            else if (Model.All(u => u.Role == Role.Doctor))
            {
                <th>
                    @Html.DisplayNameFor(model => model.DoctorInfo.Qualification)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DoctorInfo.FreeNextTime)
                </th>
            }
            else
            {
                
            }
            <th>Actions</th>
        </tr>



    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                @if (item.Role == Role.Patient) { 
                    <td>
                        @Html.DisplayFor(modelItem => item.PatientInfo.BirthdayDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PatientInfo.Address)
                    </td>
                }
                else if (item.Role == Role.Doctor) {
                    <td>
                        @Html.DisplayFor(modelItem => item.DoctorInfo.Qualification)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DoctorInfo.FreeNextTime)
                    </td>
                }
                <td>
                    @if (item.CanBeEdited)
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        @:|
                    }
                    @Html.ActionLink("Details", "View", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>

</table>

@section scripts {
    <script type="text/javascript">
        $(function () {

            $.extend(true, $.fn.dataTable.defaults, {
                "sDom": "<'row'<'col-8'f><'col-8'l>r>t<'row'<'col-md-4'i><'col-md-8'p>>",
                "sPaginationType": "bootstrap",
                "oLanguage": {
                    "sLengthMenu": "Show _MENU_ Rows",
                    "sSearch": ""
                }
            });

            $("table").dataTable();

            $(function () {
                $('table').each(function () {
                    var datatable = $(this);
                    // SEARCH - Add the placeholder for Search and Turn this into in-line formcontrol
                    var search_input = datatable.closest('.dataTables_wrapper').find('div[id$=_filter] input');
                    search_input.attr('placeholder', 'Search')
                    search_input.addClass('form-control input-small')
                    search_input.css('width', '250px')

                    // SEARCH CLEAR - Use an Icon
                    var clear_input = datatable.closest('.dataTables_wrapper').find('div[id$=_filter] a');
                    clear_input.html('<i class="icon-remove-circle icon-large"></i>')
                    clear_input.css('margin-left', '5px')

                    // LENGTH - Inline-Form control
                    var length_sel = datatable.closest('.dataTables_wrapper').find('div[id$=_length] select');
                    length_sel.addClass('form-control input-small')
                    length_sel.css('width', '75px')

                    // LENGTH - Info adjust location
                    var length_sel = datatable.closest('.dataTables_wrapper').find('div[id$=_info]');
                    length_sel.css('margin-top', '18px')
                });
            });
        });
    </script>
}